@model MOAS_LMS.Models.View.CourseViewModel

@{
    ViewBag.Title = "Details";
    var canEdit = User.IsInRole("Admin");
}

<div class="container">
    <div class="row">
        <div class="col-md-2">
            @{
                DateTime tempTime = DateTime.Now.AddDays(-1);
                var activities = Model.Modules.SelectMany(m => m.Activities).OrderBy(a => a.StartDate);
                foreach (var activity in activities.SkipWhile(a => a.EndDate < DateTime.Now).Take(8)) {
                    var aid = "activity" + activity.Id;
                    <div>
                        @if (activity.EndDate.Date != tempTime.Date) {
                            <h4>@activity.StartDate.ToString("ddd dd, MMMM")</h4>
                        }
                        <a href="#@aid" onclick="expandActivity(@activity.Id)">
                            <b>@activity.Name</b>
                        </a>
                        @if (activity.StartDate.Day != activity.EndDate.Day) {
                            <p>@activity.StartDate.ToString("HH:mm") - @activity.EndDate.ToString("ddd dd, HH:mm")</p>
                        }
                        else {
                            <p>@activity.StartDate.ToString("HH:mm") - @activity.EndDate.ToString("HH:mm")</p>
                        }
                        <hr />
                    </div>
                    tempTime = activity.StartDate;
                }
            }
        </div>
        <div class="col-md-8">
            <header>
                <h2>
                    @Html.DisplayFor(model => model.Title)
                </h2>
                <b>@Html.DisplayFor(model => model.StartDate) - @Html.DisplayFor(model => model.EndDate)</b>
            </header>
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>
            <ul>
                @foreach (var doc in Model.Documents) {
                    <li><a href="/Document/Get/@doc.Id">@doc.FileName</a> @if (User.IsInRole("Admin")) { @Html.ActionLink("[X]", "Delete", "Document", new { id = doc.Id }, null) } </li>
                }
            </ul>
            <p>
                @if (Model.Students.Count > 0) {
                    <span>@string.Join(", ", Model.Students.Select(s => s.FullName))</span>
                }
                else {
                    <span>There are no students assigned to this course.</span>
                }
            </p>
            @if (canEdit) {
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    @Html.ActionLink("Return to Course Overview", "Index") |
                    @Html.ActionLink("Register a new Student", "RegisterStudent", "Account", new { id = Model.Id }, null) |
                    @Html.ActionLink("Create a new Module", "Create", "Module", new { id = Model.Id }, null)
                </p>
                <form action="/Document/UploadToCourse/@Model.Id" method="post" enctype="multipart/form-data">
                    <input type="file" name="file" value="" />
                    <input type="submit" value="Upload" />
                </form>
            }
            <div>
                @foreach (var module in Model.Modules.OrderBy(m => m.StartDate)) {
                    <div class="module">
                        <button class="collapsible">@module.Name</button>
                        <div class="content">
                            @if (module.StartDate.Month != module.EndDate.Month) {
                                <b>@module.StartDate.ToString("MMMM dd") - @module.EndDate.ToString("MMMM dd, yyyy")</b>
                            }
                            else {
                                <b>@module.StartDate.ToString("MMMM dd") - @module.EndDate.ToString("dd, yyyy")</b>
                            }
                            <p>@module.Description</p>
                            <ul>
                                @foreach (var doc in module.Documents) {
                                <li><a href="/Document/Get/@doc.Id">@doc.FileName</a> @if (User.IsInRole("Admin")) {@Html.ActionLink("[X]", "Delete", "Document", new { id = doc.Id }, null)} </li>
                                }
                            </ul>
                            @if (canEdit) {
                                <span>
                                    @Html.ActionLink("Edit", "Edit", "Module", new { id = module.Id }, null) |
                                    @Html.ActionLink("Delete", "Delete", "Module", new { id = module.Id }, null) |
                                    @Html.ActionLink("Create a new Activity", "Create", "Activity", new { id = module.Id }, null)
                                </span>
                                <form action="/Document/UploadToModule/@module.Id" method="post" enctype="multipart/form-data">
                                    <input type="file" name="file" value="" />
                                    <input type="submit" value="Upload" />
                                </form>
                            }
                            <div>
                                @foreach (var activity in module.Activities.OrderBy(a => a.StartDate)) {
                                    var aid = "activity" + activity.Id;
                                    <div class="activity" id="@aid">
                                        <button class="collapsible">@activity.Name</button>
                                        <div class="content">
                                            @if (activity.StartDate.Day != activity.EndDate.Day) {
                                                <b>@activity.StartDate.ToString("ddd dd, HH:mm") - @activity.EndDate.ToString("ddd dd, HH:mm")</b>
                                            }
                                            else {
                                                <b>@activity.StartDate.ToString("ddd dd, HH:mm") - @activity.EndDate.ToString("HH:mm")</b>
                                            }
                                            <p>@activity.ActivityType.Name</p>
                                            <p>@activity.Description</p>
                                            <ul>
                                                @foreach (var doc in activity.Documents.Where(d => !d.IsHandIn)) {
                                                    <li><a href="/Document/Get/@doc.Id">@doc.FileName</a> @if (User.IsInRole("Admin")) {@Html.ActionLink("[X]", "Delete", "Document", new { id = doc.Id }, null)} </li>
                                                }
                                            </ul>
                                            @if (canEdit) {
                                                <span>
                                                    @Html.ActionLink("Edit", "Edit", "Activity", new { id = activity.Id }, null) |
                                                    @Html.ActionLink("Delete", "Delete", "Activity", new { id = activity.Id }, null)
                                                </span>
                                                <form action="/Document/UploadToActivity/@activity.Id" method="post" enctype="multipart/form-data">
                                                    <input type="file" name="file" value="" />
                                                    <input type="submit" value="Upload" />
                                                </form>
                                            }
                                            @if (activity.ActivityType.AllowUploads) {
                                                <br />
                                                <b>HandIns</b>
                                                <ul>
                                                    @if (User.IsInRole("Admin")) {
                                                        foreach (var doc in activity.Documents.Where(d => d.IsHandIn)) {
                                                            <li>@doc.Uploader.FullName: <a href="/Document/Get/@doc.Id">@doc.FileName</a></li>
                                                        }
                                                    }
                                                    else {
                                                        foreach (var doc in activity.Documents.Where(d => d.IsHandIn && d.Uploader.Email == User.Identity.Name)) {
                                                            <li><a href="/Document/Get/@doc.Id">@doc.FileName</a></li>
                                                        }
                                                    }
                                                </ul>
                                                if (!User.IsInRole("Admin")) {
                                                    <form action="/Document/UploadHandIn/@activity.Id" method="post" enctype="multipart/form-data">
                                                        <input type="file" name="file" value="" />
                                                        <input type="submit" value="Upload" />
                                                    </form>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-2">
            @{
                var assignments = activities.Where(a => a.ActivityType.Name == "Inlämningsuppgift" && a.ActivityType.AllowUploads == true);
                foreach (var assignment in assignments) {
                    var turnedIn = assignment.Documents.Any(a => a.Uploader?.Email == User.Identity.Name);
                    var aid = "activity" + assignment.Id;
                    if (assignment.EndDate > DateTime.Now || !turnedIn) {
                        <div>
                            <h4>
                                <a href="#@aid" onclick="expandActivity(@assignment.Id)">@assignment.Name</a>
                            </h4>
                            @if (assignment.EndDate < DateTime.Now) {<b class="overdue"><span class="glyphicon glyphicon-remove"></span> Overdue!</b>}
                            @if (turnedIn) {<b class="turnedin"><span class="glyphicon glyphicon-ok"></span> Turned in</b>}
                            <p><b>Deadline:</b> @assignment.EndDate.ToString("ddd dd MMM, HH:mm")</p>
                            <hr />
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>

<script src="~/Scripts/collapsemenu.js"></script>
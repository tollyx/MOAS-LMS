@model IEnumerable<MOAS_LMS.Models.ApplicationUser>

@{
    ViewBag.Title = "Teacher";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<h2>Teacher overview</h2>

<p>
    @Html.ActionLink("Create New", "RegisterTeacher")
</p>

<input id="myInput" type="text" placeholder="Search teacher...">

<table class="table">
    <thead>
        <tr>
            <th>
                User name
                @*@Html.DisplayNameFor(model => model.UserName)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
        <tbody id="myTable">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTeacher", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsTeacher", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteTeacher", new { id = item.Id })
                </td>
            </tr>
        </tbody>
    }
</table>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>